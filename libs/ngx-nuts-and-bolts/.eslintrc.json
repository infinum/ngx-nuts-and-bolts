{
	"extends": ["../../.eslintrc.json"],
	"ignorePatterns": ["!**/*"],
	"overrides": [
		{
			"files": ["*.ts"],
			"parserOptions": {
				"project": ["libs/ngx-nuts-and-bolts/tsconfig.*?.json", "libs/ngx-nuts-and-bolts/.storybook/tsconfig.json"]
			},
			"extends": [
				"plugin:rxjs/recommended",
				"plugin:@nrwl/nx/angular",
				"plugin:@angular-eslint/template/process-inline-templates",
				"@infinumjs/eslint-config-angular-ts"
			],
			"rules": {
				"@angular-eslint/directive-selector": [
					"error",
					{
						"type": "attribute",
						"prefix": "inf",
						"style": "camelCase"
					}
				],
				"@angular-eslint/component-selector": [
					"error",
					{
						"type": "element",
						"prefix": "inf",
						"style": "kebab-case"
					}
				],
				"rxjs/finnish": [
					"error",
					{
						"functions": false,
						"methods": false,
						"parameters": true,
						"properties": true,
						"strict": false,
						"variables": true
					}
				]
			}
		},
		{
			"files": ["*.html"],
			"extends": ["plugin:@nrwl/nx/angular-template"],
			"rules": {}
		}
	]
}
